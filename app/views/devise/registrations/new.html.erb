<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :User_name, "Nombre de usuario" %><br />
    <%= f.text_field :User_name %>
  </div>

  <div class="field">
    <%= f.label :email, "Correo electrónico" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> Caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Repetir contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<div class="contenedor-formulario">
  <div class="wrap">
    <form action="" class="formulario" name="formulario_registro" method="get">
      <div>
        <div class="input-group">
           <%= f.text_field :User_name, id:"nombre", name:"nombre" %>
           <%= f.label :User_name, "Nombre de usuario:", class: "label", for: "nombre" %>
        </div>
        <div class="input-group">
          <%= f.email_field :email, id: "correo", name: "correo" %>
          <%= f.label :email, "Correo:", class: "label", for: "correo" %>
        </div>
        <div class="input-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> Caracteres mínimo)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", id: "pass", name: "pass" %>
          <%= f.label :password, "Contraseña:", class: "label", for: "pass" %>
        </div>
        <div class="input-group">
          <%= f.password_field :password_confirmation, autocomplete: "off", id: "pass2" %>
          <%= f.label :password_confirmation, "Repetir contraseña:", class: "label", for: "pass2" %>
        </div>
        <div class="input-group checkbox">
          <input type="checkbox" name="terminos" id="terminos" value="true">
          <label for="terminos">Acepto los Terminos y Condiciones</label>
        </div>

        <%= f.submit "Registrar", id: "btn-submit" %>
      </div>
    </form>
  </div>
</div>